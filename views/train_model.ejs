<!DOCTYPE html>
<html>
  <head>
    <% include partials/title %>
    <% include partials/bootstrap %>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <% page_name = 'train_model' %>
    <% include partials/navbar %>
    <div class="container-fluid">

      <div class="row">
        <div class="col">
          <h1>Train Model</h1>
        </div>
      </div>

      <br>

      <div class="row">
        <div class="col">
          <form>
            <div class="form-group row align-items-center">
              <div class="col">
                <h2>Input</h2>
              </div>
            </div>

            <div class="form-group row align-items-start">
              <div class="col-md-6">
                <div class="form-group row align-items-center">
                  <label for="input_data_set_select" class="col-md-2 col-form-label">Data Set</label>
                  <div class="col-md-10">
                    <select id="input_data_set_select" class="form-control">
                      <option selected>RCM</option>
                      <option>GCM</option>
                    </select>
                  </div>
                </div>
                <div class="form-group row align-items-center">
                  <label for="grid_size_select" class="col-md-2 col-form-label">Grid Size</label>
                  <div class="col-md-10">
                    <select id="grid_size_select" class="form-control">
                      <option selected>3x3</option>
                      <option>5x5</option>
                      <option>All grid</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row align-items-start">
                  <label for="input_attribute_select" class="col-md-2 col-form-label">Attribute</label>
                  <div class="col-md-10">
                    <select id="input_attribute_select" class="custom-select" multiple size="5">
                      <option value="Temperature" selected>Temperature</option>
                      <option value="Humidity">Humidity</option>
                      <option value="Precipitation Flux">Precipitation Flux</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-group row align-items-center">
              <div class="col">
                <h2>Output</h2>
              </div>
            </div>

            <div class="form-group row align-items-start">
              <div class="col-md-6">
                <div class="form-group row align-items-center">
                  <label for="output_data_set_select" class="col-md-2 col-form-label">Data Set</label>
                  <div class="col-md-10">
                    <select id="output_data_set_select" class="form-control">
                      <option selected>Station</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row align-items-start">
                  <label for="output_attribute_select" class="col-md-2 col-form-label">Attribute</label>
                  <div class="col-md-10">
                    <select id="output_attribute_select" class="form-control">
                      <option value="Temperature" selected>Temperature</option>
                      <option value="Humidity">Humidity</option>
                      <option value="Precipitation Flux">Precipitation Flux</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-group row align-items-center">
              <div class="col-md-3">
                <h2>Data</h2>
              </div>
              <div class="col-md-3">
              </div>
              <div class="col-md-3">
                <h2>Training Set</h2>
              </div>
              <div class="col-md-3">
                <h2>Test Set</h2>
              </div>
            </div>

            <div class="form-group row align-items-center">
              <div class="col-md-3">
                <select class="custom-select" multiple size="10">
                  <option value="1970" selected>1970</option>
                  <option value="1971">1971</option>
                  <option>1972</option>
                  <option>1973</option>
                  <option>1974</option>
                  <option>1975</option>
                  <option>1976</option>
                  <option>1977</option>
                  <option>1978</option>
                  <option>1979</option>
                  <option>1980</option>
                </select>
              </div>
              <div class="col-md-3">
                <div class="form-group row align-items-center">
                  <div class="col">
                    <button type="button" class="btn btn-success btn-block btn-sm">Insert to Training Set</button>
                  </div>
                </div>
                <div class="form-group row align-items-center">
                  <div class="col">
                    <button type="button" class="btn btn-danger btn-block btn-sm">Eject from Training Set</button>
                  </div>
                </div>
                <div class="form-group row align-items-center">
                  <div class="col">
                    <button type="button" class="btn btn-success btn-block btn-sm">Insert to Test Set</button>
                  </div>
                </div>
                <div class="form-group row align-items-center">
                  <div class="col">
                    <button type="button" class="btn btn-danger btn-block btn-sm">Eject from Test Set</button>
                  </div>
                </div>
              </div>
              <div class="col-md-3">
                <select class="custom-select" multiple size="10">
                  <option value="1970" selected>1970</option>
                  <option value="1971">1971</option>
                  <option>1972</option>
                  <option>1973</option>
                </select>
              </div>
              <div class="col-md-3">
                <select class="custom-select" multiple size="10">
                  <option value="1977" selected>1977</option>
                  <option>1978</option>
                  <option>1979</option>
                  <option>1980</option>
                </select>
              </div>
            </div>

            <br>

            <div class="form-group row align-items-center">
              <div class="col-md-2">
                <button type="button" class="btn btn-primary">Run Model</button>
              </div>
              <div class="col-md-6">
                <div class="progress">
                  <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
                </div>
              </div>
              <label for="accuracy" class="col-md-1 col-form-label">Accuracy</label>
              <div class="col-md-2">
                <input type="text" class="form-control" id="accuracy" placeholder="XX.XX %" readonly>
              </div>
            </div>

            <div class="form-group row align-items-center">
              <div class="col-md-2">
                <button type="button" class="btn btn-success">Save Model</button>
              </div>
            </div>
          </form>
        </div>
      </div>

    </div>
  </body>
</html>
